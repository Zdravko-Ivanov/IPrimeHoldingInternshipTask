@model ViewModels.EmployeeInputModel
@{
    ViewData["Title"] = "Employees";
        int row = 0;
}
<h1>Employees: <a class="btn btn-success btn-lg" asp-area="" asp-controller="Employee" asp-action="Create">Add</a></h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Full Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">DateOfBirth</th>
      <th scope="col">Salary</th>
      <th scope="col">Department</th>
      <th scope="col">Completed Tasks</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>

  <tbody>
      @foreach(var employee in @Model.Employees)
{

    row++;
    <tr>
      <th scope="row">@row</th>
      <td>@employee.FullName</td>
      <td>@employee.Email</td>
      <td>@employee.Phone</td>
      <td>@employee.DateOfBirth.ToShortDateString()</td>
      <td>@employee.Salary</td>
      <td>@employee.DepartmentId</td>
      <td>@employee.CompletedTasks</td>
      <td>         
          <form asp-controller="Employee" asp-action="Edit" method="get">
                    <input type="hidden" asp-for="Id" value="@employee.Id" />
                    <button type="submit" class="btn btn-primary">Edit</button>
                    </form>
    </td><td>
          <form asp-controller="Employee" asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" value="@employee.Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    </td>
    </tr>

}
  </tbody>
</table>

